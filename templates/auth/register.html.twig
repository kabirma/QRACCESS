{% extends 'auth/auth_base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<main
		id="main-container">
		<!-- Page Content -->
		<div class="bg-gd-emerald">
			<div
				class="hero-static content content-full bg-body-extra-light">
				<!-- Header -->
				<div class="py-4 px-1 text-center mb-4">
					<a class="link-fx fw-bold" href="{{url('dashboard')}}">
						<i class="fa fa-fire"></i>
						<span class="fs-4 text-body-color">QR</span>
						<span class="fs-4">ACCESS</span>
					</a>
					<h1 class="h3 fw-bold mt-5 mb-2">Create New Account</h1>
					<h2 class="h5 fw-medium text-muted mb-0">Please add your details</h2>
				</div>
				<!-- END Header -->

				<!-- Sign Up Form -->
				<div class="row justify-content-center px-1">
					<div class="col-sm-8 col-md-6 col-xl-4">

						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm) }}
						<div class=" mb-4">

							<label for="" class="form-label">Username</label>
							<input name="username" placeholder="" type="text" class="form-control">
						</div>

						<div class="form-floating mb-4">

							{{ form_row(registrationForm.email) }}
						</div>
						<div class="form-floating mb-4">

							{{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
						</div>
						<div class="row g-sm mb-4">
							<div class="col-12 mb-2">
								<button type="submit" class="btn btn-lg btn-alt-primary w-100 py-3 fw-semibold">
									Sign Up
								</button>
							</div>
							{# <div class="col-6">
								<a class="btn btn-alt-secondary w-100" href="#" data-bs-toggle="modal" data-bs-target="#modal-terms">
									Read Terms
								</a>
							</div>
							<div class="col-6">
								<a class="btn btn-alt-secondary w-100" href="op_auth_signin.html">
									Sign In
								</a>
							</div> #}
						</div>
						{{ form_end(registrationForm) }}

					</div>
				</div>
				<!-- END Sign Up Form -->
			</div>


		</div>
		<!-- END Page Content -->
	</main>
	<!-- END Main Container -->
</div>
<!-- END Page Container -->{% endblock %}
